<!-- This displays the form for user feedback which is sent to the database-->
<%= form_for(feedback) do |f| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :food_order %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :feedback_details %>
    <%= f.text_area :content %>
  </div>

  <div class="actions">
    <%= f.submit({:class => 'btn btn-mini btn-primary btn-lg'}) %>
  </div>
<% end %>
