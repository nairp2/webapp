<div class="media">
 <div class="media-body">
  <table class="table table-hover">
   <thead>
    <tr>
      <th align="center">Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.title %></td>
        <td><%= feedback.content %></td>
        <td><%= link_to 'Show', feedback, class: 'btn btn-mini btn-default' %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Delete', feedback, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</div>

<br>

<%= link_to 'New Feedback', new_feedback_path, class: 'btn btn-mini btn-primary btn-lg' %>
